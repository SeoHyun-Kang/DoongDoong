<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="800dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f8f8f9">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/btn_back" />

    <ImageView
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="87dp"
        android:src="@drawable/img_default_doong"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.01"
        android:text="을"
        android:textColor="@color/gray_6"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="126dp"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.01"
        android:text="녹음해보세요!"
        android:textColor="@color/gray_6"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/comp_start_record"
        android:layout_width="216dp"
        android:layout_height="300dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="246dp"
        android:src="@drawable/comp_start_record_1"
        android:state_pressed="true" />

    <ImageButton
        android:id="@+id/btn_skip"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="549dp"
        android:src="@drawable/btn_skip"
        android:state_pressed="false" />

    <ImageButton
        android:id="@+id/btn_disable"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="678dp"
        android:src="@drawable/btn_next_bs" />


</RelativeLayout>

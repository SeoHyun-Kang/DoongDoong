<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup_code"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:background="@color/gray_1"
    android:orientation="vertical">

    <View
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="#ffffff"></View>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/btn_back" />

    <TextView
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="2sp"
        android:text="설정"
        android:textAlignment="center"
        android:textColor="@color/gray_6"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        style="@style/Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="112dp"
        android:text="연결 코드 확인" />

    <ImageButton
        android:id="@+id/btn_check_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="97dp"
        android:background="@color/gray_1"
        android:src="@drawable/btn_left" />

    <TextView
        style="@style/Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="160dp"
        android:text="아이 정보 수정" />

    <ImageButton
        android:id="@+id/btn_edit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="144dp"
        android:background="@color/gray_1"
        android:src="@drawable/btn_left" />

    <TextView
        style="@style/Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="208dp"
        android:text="기본 음성 관리" />

    <ImageButton
        android:id="@+id/btn_edit_basic_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="192dp"
        android:background="@color/gray_1"
        android:src="@drawable/btn_left" />

    <View
        android:layout_width="328dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="255.8dp"
        android:background="#dadada" />

    <TextView
        style="@style/Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:text="알림 설정"
        android:textColor="#474747" />

    <TextView
        style="@style/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="305dp"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:textColor="@color/gray_4"
        android:text="아이와의 채팅 알림을 받을 수 있어요" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/alert"
        android:layout_width="102dp"
        android:layout_height="92dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="260dp"
        android:checked="false"
        android:padding="50dp"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track" />


</RelativeLayout>